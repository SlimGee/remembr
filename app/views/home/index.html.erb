<div>
  <!-- Hero -->
  <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-[85rem]">
    <!-- Grid -->
    <div class="grid lg:grid-cols-7 lg:gap-x-8 lg:items-center xl:gap-x-12">
      <div class="lg:col-span-3">
        <h1
          class="block text-3xl font-bold text-center text-gray-800 sm:text-4xl md:text-5xl md:text-left lg:text-6xl dark:text-white"
        >
          Create an everlasting tribute to your loved one
        </h1>
        <p
          class="mt-3 text-lg text-center text-gray-800 md:text-left dark:text-neutral-400"
        >
          This platform allows you to create a notice for your loved one, share
          it with your friends and family, and keep it online forever.
        </p>

        <div class="flex flex-col gap-2 items-center mt-5 sm:flex-row sm:gap-3 lg:mt-8">
          <%= link_to "Create a notice", new_notice_path, class: "btn-primary" %>
        </div>
        <!-- Brands --> <!-- End Brands -->
      </div>
      <!-- End Col -->
      <div class="mt-10 lg:col-span-4 lg:mt-0">
        <%= image_tag "hero_1.webp",
        class: "w-full rounded-xl object-fill",
        alt: "Remembr Hero banner" %>
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Hero --> <!-- Card Section -->
  <div class="py-10 px-4 mx-auto sm:px-6 lg:py-14 lg:px-8 max-w-[85rem]">
    <!-- Grid -->
    <div class="grid sm:grid-cols-2 sm:gap-6 lg:grid-cols-3">
      <!-- Card --> <!-- End Card --> <!-- Card --> <!-- End Card --> <!-- Card
      -->
      <a
        class="flex flex-col bg-white rounded-xl border shadow-sm transition hover:shadow-md focus:shadow-md focus:outline-none group dark:bg-neutral-900 dark:border-neutral-800"
        href="mailto:given@flixtechs.co.zw"
      >
        <div class="p-4 md:p-5">
          <div class="flex gap-x-5">
            <svg
              class="mt-1 text-gray-800 shrink-0 size-5 dark:text-neutral-200"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            ><path
                d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"
              /><path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"/></svg>

            <div class="grow">
              <h3
                class="font-semibold text-gray-800 group-hover:text-blue-600 dark:group-hover:text-neutral-400 dark:text-neutral-200"
              >
                Email me
              </h3>
              <p class="text-sm text-gray-500 dark:text-neutral-500">
                Reach me at
                <span
                  class="font-medium text-blue-600 dark:text-blue-500 group-hover:underline decoration-2"
                >given@flixtechs.coz.w</span>
              </p>
            </div>
          </div>
        </div>
      </a>
      <!-- End Card -->
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Card Section -->
  <section class="bg-gray-50 dark:bg-gray-900">
    <div class="py-10 px-4 mx-auto sm:px-6 md:py-16 lg:px-8 max-w-[85rem]">
      <div class="max-w-screen-md">
        <h2
          class="mb-4 text-4xl font-extrabold tracking-tight text-center text-gray-900 md:text-left dark:text-white"
        >
          Get the most out of Remembr by registering an account
        </h2>
        <p
          class="mb-8 font-light text-center text-gray-600 sm:text-xl md:text-left dark:text-gray-400"
        >
          Add tributes, save important notices and get notified on things that
          matter to you
        </p>
        <div class="text-center md:text-left">
          <%= link_to "Register", new_user_registration_path, class: "btn-primary" %>
        </div>
      </div>
    </div>
  </section>
