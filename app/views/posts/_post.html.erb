<a
  href="<%= post_path(post) %>"
  title="Read more about <%= post.title %>"
  class="w-full rounded-2xl border border-gray-300 lg:w-1/3 group max-lg:max-w-xl"
>
  <div class="flex items-center">
    <%= image_tag post.cover, class: "object-cover w-full rounded-t", alt: post.title %>
  </div>
  <div
    class="p-4 rounded-b-2xl transition-all duration-300 lg:p-6 group-hover:bg-gray-50"
  >
    <span class="block mb-3 font-medium text-indigo-600">
      <%= time_ago_in_words post.created_at %>
      ago
    </span>
    <h4 class="mb-5 text-xl font-medium leading-8 text-gray-900">
      <%= post.title.capitalize %>
    </h4>
    <p class="mb-10 leading-6 text-gray-500">
      <%= truncate post.excerpt %>
    </p>
  </div>
</a>
