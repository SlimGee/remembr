<div class="flex mx-auto w-full md:w-2/3">
  <div class="mx-auto">
    <% if notice.present? %>
      <p
        class="inline-block py-2 px-3 mb-5 font-medium text-green-500 bg-green-50 rounded-lg"
        id="notice"
      ><%= notice %></p>
    <% end %>

    <%= render @post %>

    <%= link_to "Edit this post",
    edit_admin_post_path(@post),
    class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to posts",
    admin_posts_path,
    class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this post",
      admin_posts_path(@post),
      method: :delete,
      class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
