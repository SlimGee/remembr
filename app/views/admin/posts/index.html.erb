<div class="py-10 px-4 mx-auto sm:px-6 lg:py-14 lg:px-8 max-w-[85rem]">
  <div class="flex flex-col">
    <div class="overflow-x-auto -m-1.5">
      <div class="inline-block p-1.5 min-w-full align-middle">
        <div class="overflow-hidden bg-white rounded border border-gray-200 shadow-sm">
          <div
            class="grid gap-3 py-4 px-6 border-b border-gray-200 md:flex md:justify-between md:items-center"
          >
            <div>
              <h2 class="text-xl font-semibold text-gray-800">
                Posts
              </h2>
              <p class="text-sm text-gray-600">
                Manage your posts and their details
              </p>
            </div>

            <div>
              <div class="inline-flex gap-x-2">
                <%= link_to new_admin_post_path do %>
                  <button class="button">
                    <i class="mr-2 bi bi-plus-lg"></i>
                    Create new post
                  </button>
                <% end %>
              </div>
            </div>
          </div>

          <% unless !@posts.empty? %>
            <div
              class="flex flex-col justify-center py-4 px-6 mx-auto w-full max-w-sm min-h-[400px]"
            >
              <h2 class="mt-5 font-semibold text-gray-800">
                No posts found
              </h2>
              <p class="mt-2 text-sm text-gray-600">
                Create a new post to get started
              </p>

              <div class="grid gap-2 mt-5 sm:flex">
                <%= link_to new_admin_post_path do %>
                  <button class="button">
                    <i class="mr-2 bi bi-plus-lg"></i>
                    Create new post
                  </button>
                <% end %>
              </div>
            </div>
          <% else %>
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>

                  <th scope="col" class="py-3 px-6 text-start">
                    <div class="flex gap-x-2 items-center">
                      <span class="text-xs font-semibold tracking-wide text-gray-800 uppercase">
                        Title
                      </span>
                    </div>
                  </th>

                  <th scope="col" class="py-3 px-6 text-start">
                    <div class="flex gap-x-2 items-center">
                      <span class="text-xs font-semibold tracking-wide text-gray-800 uppercase">
                        Status
                      </span>
                    </div>
                  </th>

                  <th scope="col" class="py-3 px-6 text-start">
                    <div class="flex gap-x-2 items-center">
                      <span
                        class="text-xs font-semibold tracking-wide text-gray-800 uppercase dark:text-neutral-200"
                      >
                        Created
                      </span>
                    </div>
                  </th>

                  <th scope="col" class="py-3 px-6 text-end"></th>
                </tr>
              </thead>

              <tbody class="divide-y divide-gray-200">
                <% @posts.each do |post| %>
                  <tr>

                    <td class="whitespace-nowrap size-px">
                      <div class="py-3 px-6">
                        <span class="text-sm text-gray-600">
                          <%= post.title %>
                        </span>
                      </div>
                    </td>
                    <td class="whitespace-nowrap size-px">
                      <div class="py-3 px-6">
                        <span class="text-sm text-gray-600">
                          <%= post.status %>
                        </span>
                      </div>
                    </td>

                    <td class="whitespace-nowrap size-px">
                      <div class="py-3 px-6">
                        <span class="text-sm text-gray-600">
                          <%= time_ago_in_words post.created_at %>
                          ago
                        </span>
                      </div>
                    </td>
                    <td class="whitespace-nowrap size-px justify">
                      <div class="py-1.5 px-6 ml-auto text-end">

                        <%= link_to "Edit", edit_admin_post_path(post), class: "btn-outline" %>
                        <%= link_to "Delete",
                        admin_post_path(post),
                        class: "button bg-red-600 rder-red-600 hover:bg-red-400 focus:!border-red-600",
                        data: {
                          turbo_confirm: "Are you sure you want to delete this post",
                          turbo_method: "delete",
                        } %>

                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
          <div class="py-6 px-4">
            <%= paginate @posts %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Card -->
</div>
<!-- End Table Section -->
