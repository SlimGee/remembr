<div class="flex mx-auto w-full md:w-2/3">
  <div class="mx-auto">

    <%= render @notice %>

    <%= link_to "Edit this notice",
    edit_notice_path(@notice),
    class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to notices",
    notices_path,
    class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this notice",
      @notice,
      method: :delete,
      class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
