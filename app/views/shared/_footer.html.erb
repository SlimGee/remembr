<!-- ========== FOOTER ========== -->
<footer class="mt-auto w-full bg-gray-900 dark:bg-neutral-950">
  <div
    class="py-10 px-4 mx-auto mt-auto w-full sm:px-6 lg:px-8 lg:pt-20 max-w-[85rem]"
  >
    <!-- Grid -->
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4 lg:grid-cols-5">
      <div class="col-span-full lg:col-span-1">
        <a
          class="flex-none text-xl font-semibold text-white focus:opacity-80 focus:outline-none"
          href="<%= root_path %>"
          aria-label="Brand"
        >

          <%= image_tag "remembr_logo_cropped.png",
          class: "h-6",
          alt: "Remembr Funeral Notices logo" %>

        </a>
      </div>
      <!-- End Col -->
      <div class="col-span-1">
        <h4 class="font-semibold text-gray-100">Notices</h4>

        <div class="grid mt-3 space-y-3">
          <p>
            <%= link_to "All Announcements",
            app_path,
            class:
              "inline-flex gap-x-2 text-gray-400 hover:text-gray-200 focus:text-gray-200 focus:outline-none dark:text-neutral-400 dark:hover:text-neutral-200 dark:focus:text-neutral-200" %>
          </p>
          <p>
            <%= link_to "Death Notices",
            app_path,
            class:
              "inline-flex gap-x-2 text-gray-400 hover:text-gray-200 focus:text-gray-200 focus:outline-none dark:text-neutral-400 dark:hover:text-neutral-200 dark:focus:text-neutral-200" %>
          </p>
          <p>
            <%= link_to "In Memoriam",
            app_path,
            class:
              "inline-flex gap-x-2 text-gray-400 hover:text-gray-200 focus:text-gray-200 focus:outline-none dark:text-neutral-400 dark:hover:text-neutral-200 dark:focus:text-neutral-200" %>
          </p>
          <p>
            <%= link_to "Obituaries",
            app_path,
            class:
              "inline-flex gap-x-2 text-gray-400 hover:text-gray-200 focus:text-gray-200 focus:outline-none dark:text-neutral-400 dark:hover:text-neutral-200 dark:focus:text-neutral-200" %>
          </p>
        </div>
      </div>
      <!-- End Col -->
      <div class="col-span-1">
        <h4 class="font-semibold text-gray-100">Charities and Businesses</h4>

        <div class="grid mt-3 space-y-3">
          <p>
            <%= link_to "Create a notice",
            new_notice_path,
            class:
              "inline-flex gap-x-2 text-gray-400 hover:text-gray-200 focus:text-gray-200 focus:outline-none dark:text-neutral-400 dark:hover:text-neutral-200 dark:focus:text-neutral-200" %>
          </p>
        </div>
      </div>
      <!-- End Col -->
      <div class="col-span-2">
        <h4 class="font-semibold text-gray-100">Stay up to date</h4>

        <form>
          <div
            class="flex flex-col gap-2 items-center p-2 mt-4 bg-white rounded-lg sm:flex-row sm:gap-3 dark:bg-neutral-900"
          >
            <div class="w-full">
              <label for="hero-input" class="sr-only">Subscribe</label>
              <input
                type="text"
                id="hero-input"
                name="hero-input"
                class="block py-3 px-4 w-full text-sm rounded-lg border-transparent dark:border-transparent focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                placeholder="Enter your email"
              >
            </div>
            <a
              class="inline-flex gap-x-2 justify-center items-center p-3 w-full text-sm font-medium text-white whitespace-nowrap bg-green-600 rounded-lg border border-transparent sm:w-auto hover:bg-blue-700 focus:bg-blue-700 focus:outline-none disabled:opacity-50 disabled:pointer-events-none"
              href="#"
            >
              Subscribe
            </a>
          </div>
          <p class="mt-3 text-sm text-gray-400">
            We will use your email to send alerts and newsletters. You can
            unsubscribe at any time
          </p>
        </form>
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->
    <div
      class="grid gap-y-2 mt-5 sm:flex sm:gap-y-0 sm:justify-between sm:items-center sm:mt-12"
    >
      <div class="flex justify-between items-center">
        <p class="text-sm text-gray-400 dark:text-neutral-400">
          &copy;
          <%= Date.current.year %>
          Flixtechs. All rights reserved.</p>
      </div>
      <!-- End Social Brands -->
    </div>
  </div>
</footer>
<!-- ========== END FOOTER ========== -->
