<div class="w-full">

  <% if notice %>
    <div
      id="dismiss-alert"
      class="p-4 my-4 text-sm text-teal-800 bg-teal-50 rounded-lg border border-teal-200 transition duration-300 dark:text-teal-500 dark:border-teal-900 hs-removing:translate-x-5 hs-removing:opacity-0 dark:bg-teal-800/10"
      role="alert"
      tabindex="-1"
      aria-labelledby="hs-dismiss-button-label"
    >
      <div class="flex">
        <div class="shrink-0">
          <svg
            class="mt-0.5 shrink-0 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"
            ></path>
            <path d="m9 12 2 2 4-4"></path>
          </svg>
        </div>
        <div class="ms-2">
          <h3 id="hs-dismiss-button-label" class="text-sm font-medium">
            <%= notice %>
          </h3>
        </div>
        <div class="ps-3 ms-auto">
          <div class="-my-1.5 -mx-1.5">
            <button
              type="button"
              class="inline-flex p-1.5 text-teal-500 bg-teal-50 rounded-lg dark:text-teal-600 dark:bg-transparent hover:bg-teal-100 focus:bg-teal-100 focus:outline-none dark:hover:bg-teal-800/50 dark:focus:bg-teal-800/50"
              data-hs-remove-element="#dismiss-alert"
            >
              <span class="sr-only">Dismiss</span>
              <svg
                class="shrink-0 size-4"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div
      id="dismiss-alert2"
      class="p-4 m-4 text-sm text-teal-800 bg-red-50 rounded-lg border border-red-200 transition duration-300 dark:text-teal-500 dark:border-teal-900 hs-removing:translate-x-5 hs-removing:opacity-0"
      role="alert"
      tabindex="-1"
      aria-labelledby="hs-dismiss-button-label"
    >
      <div class="flex">
        <div class="shrink-0">
          <svg
            class="mt-0.5 shrink-0 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"
            ></path>
            <path d="m9 12 2 2 4-4"></path>
          </svg>
        </div>
        <div class="ms-2">
          <h3 id="hs-dismiss-button-label" class="text-sm font-medium">
            <%= alert %>
          </h3>
        </div>
        <div class="ps-3 ms-auto">
          <div class="-my-1.5 -mx-1.5">
            <button
              type="button"
              class="inline-flex p-1.5 text-teal-500 bg-teal-50 rounded-lg dark:text-teal-600 dark:bg-transparent hover:bg-teal-100 focus:bg-teal-100 focus:outline-none dark:hover:bg-teal-800/50 dark:focus:bg-teal-800/50"
              data-hs-remove-element="#dismiss-alert2"
            >
              <span class="sr-only">Dismiss</span>
              <svg
                class="shrink-0 size-4"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
